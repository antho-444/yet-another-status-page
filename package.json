{
  "name": "yet-another-status-page",
  "version": "1.0.0",
  "description": "A modern, self-hosted status page built with Payload CMS and Next.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "generate:types": "payload generate:types",
    "generate:importmap": "payload generate:importmap",
    "test:e2e": "./scripts/run-e2e-tests.sh",
    "test:e2e:headed": "./scripts/run-e2e-tests.sh --headed",
    "test:e2e:debug": "./scripts/run-e2e-tests.sh --debug",
    "test:e2e:ui": "./scripts/run-e2e-tests.sh --ui",
    "test:e2e:fast": "CI= PAYLOAD_PUBLIC_ALLOW_WRITES=true npx playwright test --project=chromium",
    "test:e2e:report": "npx playwright show-report"
  },
  "dependencies": {
    "@payloadcms/db-postgres": "3.75.0",
    "@payloadcms/next": "3.75.0",
    "@payloadcms/richtext-lexical": "3.75.0",
    "@payloadcms/storage-vercel-blob": "3.75.0",
    "@payloadcms/ui": "3.75.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "debug": "^4.4.3",
    "gamedig": "^5.3.2",
    "graphql": "^16.10.0",
    "lucide-react": "^0.462.0",
    "nanoid": "^5.0.9",
    "next": "16.1.6",
    "nodemailer": "^6.9.16",
    "payload": "3.75.0",
    "payload-oauth2": "^1.0.20",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sass": "^1.97.2",
    "sharp": "0.34.2",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "twilio": "^5.4.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^16.1.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/debug": "^4.1.12",
    "@types/gamedig": "^5.0.3",
    "@types/node": "^22.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^9.0.0",
    "eslint-config-next": "^16.1.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.52.0",
    "yaml": "^2.8.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
